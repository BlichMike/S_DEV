$(document).ready(function(){
  var defaultCart = function () {
    var cartQuantity = {plus: ".cart_quantity .fa-plus", 
                        minus: ".cart_quantity .fa-minus", 
                        input: ".cart_quantity input"};

    var $cart_qty_plus, 
        $cart_qty_minus, 
        $cart_qty_input = $(cartQuantity.input);
    
    $cart_qty_input.each(function(i, input) {
      var current = $(input).parent();
      var $minus = current.children(".fa-minus"),
          $plus = current.children(".fa-plus"),
          $updateCart = $(".update-cart");
      $plus.click( function() {
        $(input).trigger("stepUp");
        $updateCart.click();
      });

      $minus.click( function() {
        $(input).trigger("stepDown");
        $updateCart.click();
      });
	});    
  };

  defaultCart();
});
