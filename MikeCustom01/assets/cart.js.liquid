$(document).ready(function(){
  var defaultCart = function () {
    var quantityInput = ".cart_quantity input";

    var $cart_qty_plus, 
        $cart_qty_minus, 
        $cart_qty_input = $(quantityInput);
    
    $cart_qty_input.each(function(i, input) {
      var current = $(input).parent();
      var $minus = current.children(".js-qty__adjust--minus"),
          $plus = current.children(".js-qty__adjust--plus"),
          $updateCart = $(".update-cart");
      $plus.click( function() {
        $updateCart.click();
      });

      $minus.click( function() {
        $updateCart.click();
      });
	});    
  };

  var $body = $('body');
  $body.on('ajaxCart.qtyLoaded', defaultCart);
});
